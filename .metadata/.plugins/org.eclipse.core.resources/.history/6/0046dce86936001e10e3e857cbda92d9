package exer2;

public class Student {
	String name;
	Kor kor;
	Eng eng;
	Mat mat;
	int sum, rank;
	double avg;
	
	public Student() {
		super();
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
		calc();
	}
	void calc() {
		sum = 0;
		sum = kor.getJum()+eng.getJum()+mat.getJum();
		avg = sum/3;
	}
	
	
	class Kor{
		int jum;
		public int getJum() {
			return jum;
		}
		public void setJum(int jum) {
			this.jum = jum;
		}
		@Override
		public String toString() {
			return "Kor [jum=" + jum + "]";
		}

	}
	class Eng{
		int jum;

		public int getJum() {
			return jum;
		}

		public void setJum(int jum) {
			this.jum = jum;
		}

		@Override
		public String toString() {
			return "Eng [jum=" + jum + "]";
		}
		
	}
	class Mat{
		int jum;

		public int getJum() {
			return jum;
		}

		public void setJum(int jum) {
			this.jum = jum;
		}

		@Override
		public String toString() {
			return "Mat [jum=" + jum + "]";
		}
		
	}

}
