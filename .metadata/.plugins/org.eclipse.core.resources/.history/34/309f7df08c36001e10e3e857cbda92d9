package exer2;

import java.util.Arrays;

public class SRank {
	Student[] students;
	int rank;
	
	public SRank(Student[] students) {
		super();
		this.students = students;
		this.rank = rank;
	}

/*
	for(Student st : students) {
	    st.rankCalc(students);
	}*/


	public void rankCalc(Student ... exArr) {
		// 등수 초기값 1위
		rank = 1;
		for(Student you : exArr) {
        	if(you!=null && avg<you.avg) {
				rank++;
			}
		}
	}

	public Student[] getStudents() {
		return students;
	}
	
	public void setStudents(Student ... students) {
		this.students = students;
	}
	
	@Override
	public String toString() {
		return "SRank [students=" + Arrays.toString(students) + "]";
		}
		
	}

}	

class Student {
	// 필드 선언
	String name;
	int[] jum;
	int tot;
	int rank;
	// rank 연산시 더 정확하도록 double 적용
	double avg;

	public Student(String name, int[] jum) {
		super();
		this.name = name;
		this.jum = jum;
		calc();
	}

	// tot, avg, grade 연산
	void calc() {
		tot = 0;
		for(int i : jum) {
			tot += i;
		}
		avg = (double)tot/jum.length;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int[] getJum() {
		return jum;
	}

	public void setJum(int... jum) {
		this.jum = jum;
	}
	public int getTot() { return tot; }

	public void setTot(int tot) { this.tot = tot; }

	public double getAvg() { return avg; }
	 
	public void setAvg(double avg) { this.avg = avg; }

	@Override
	public String toString() {
		return "Student [name=" + name + ", jum=" + Arrays.toString(jum) + ", tot=" + tot
				+ ", rank=" + rank + ", avg=" + avg + "]";
	}

}



