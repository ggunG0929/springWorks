package exer2;

import java.util.Arrays;

public class Student {
	String name;
	int [] jum;
	int tot=0;
	double avg;
	
	public Student(String name, int ... jum) {
		this.name = name;
		this.jum = jum.clone();
		calc();
	}
	// tot, avg, grade 연산
	void calc() {
		tot = 0;
		for(int i : jum) {
			tot += i;
		}
		avg = (double)tot/jum.length;
	}


	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int[] getJum() {
		return jum;
	}

	public void setJum(int[] jum) {
		this.jum = jum;
	}
	public int getTot() {
		return tot;
	}
	
	public void setTot(int tot) {
		this.tot = tot;
	}
	
	public double getAvg() {
		return avg;
	}
	
	public void setAvg(double avg) {
		this.avg = avg;
	}

	@Override
	public String toString() {
		return "Student [name=" + name + ", jum=" + Arrays.toString(jum) + ", tot=" + tot + ", avg=" + avg + "]";
	}
	
}