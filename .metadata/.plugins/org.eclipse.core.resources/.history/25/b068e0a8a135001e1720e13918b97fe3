package exercise;

public class Tal_main {

	public static void main(String[] args) {
		
		Bike bk1 = new Bike();
		Bike bk2 = new Bike();
		Bike bk3 = new Bike();
		Tire t1 = new Tire();
		Tire t2 = new Tire();
		Handle hdl = new Handle();
		Basket bsk = new Basket();

		t1.setName("바퀴");
		t1.setCnt(3);
		t2.setName("바퀴");
		t2.setCnt(2);
		
		hdl.setName("핸들");
		
		bsk.setName("바구니");
		
		bk1.setName("세발자전거");
		bk2.setName("포카리자전거");
		bk3.setName("MTB");
		
		bk1.setTire(t1);
		bk1.setHandle(hdl);
		bk1.setBasket(bsk);

		bk2.setTire(t2);
		bk2.setHandle(hdl);
		bk2.setBasket(bsk);
		
		bk3.setTire(t2);
		bk3.setHandle(hdl);
		bk3.setBasket(bsk);
		
		System.out.println(bk1);
		System.out.println(bk2);
		System.out.println(bk3);
		
//		System.out.println("--------------------------------");
