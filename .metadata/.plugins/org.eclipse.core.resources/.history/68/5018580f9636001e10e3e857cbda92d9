package exer2;

import java.util.Arrays;
import java.util.List;

import di_p.Stud;

public class Student {
	// 필드 선언
	String name;
	int[] jum;
	int tot;
	// rank 연산시 더 정확하도록 double 적용
	double avg;

//	// tot, avg, grade 연산 - 따로 안쓰심
//	void calc() {
//		tot = 0;
//		for(int i : jum) {
//			tot += i;
//		}
//		avg = (double)tot/jum.length;
//	}

	public void setJum(int... jum) {
		this.jum = jum;
	// 여기서부터 중요
		tot=0;
		for(int i : jum) {
			tot += i;
		}
		avg = tot / jum.length;
	}
	
	// 여기에 있어야함
	void rankCalc(List<Stud> studs) {
		rank = 1;
		for (Stud you : studs) {
			if(avg < you.avg) {
				rank++;
			}
		}
	}
	
//	@Override
//	public String toString() {
//		return "Student [name=" + name + ", jum=" + Arrays.toString(jum) + ", tot=" + tot
//				+ ", avg=" + avg + "]";
//	}
//
//}
	// 공부필요
	@Override
	public String toString() {
		return "" + name + "\t" + Arrays.toString(jum) + "\t" + tot + "\t" + avg + "\t"+rank;
	}
	@Override
	public int compareTo(Stud you) {
		
		int res = rank - you.rank;
		
		if(res == 0) {
			res = name.compareTo(you.name);
		}
		return res;
	}
	
	
}