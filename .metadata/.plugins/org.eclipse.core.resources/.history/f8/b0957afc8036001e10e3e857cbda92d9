package exer2;

import java.util.Arrays;

public class Student {
	String name;
	int [] jum;
//		int tot;
//		double avg;
	
	// 입력이 필요한 필드와 그에 따른 연산
	public Student(String name, String ... jum1) {
		this.name = name;
		this.jum = new int[jum1.length];
    	for(int i : jum) {
    		jum[i] = Integer.parseInt(jum1[i]);
	    }
//			calc();
	}

	/*
	 * // tot, avg, grade 연산 void calc() { tot = 0; for(int i : jum) { tot += i; }
	 * avg = (double)tot/jum.length; }
	 */

	/*
	 * public void rankCalc(Student [] exArr) { // 등수 초기값 1위 rank = 1; for(Student
	 * you : exArr) { if(you!=null && avg<you.avg) { rank++; } } }
	 */

	@Override
	public String toString() {
		return "Student [name=" + name + ", jum=" + Arrays.toString(jum) + "]";
	}
	
}